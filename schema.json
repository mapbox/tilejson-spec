{
    "name": "TileJSON",
    "type": "object",
    "properties": {
        "tilejson": {
            "type": "string",
            "required": true,
            "pattern": "\\d+\\.\\d+\\.\\d+\\w?[\\w\\d]*"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "pattern": "\\d+\\.\\d+\\.\\d+\\w?[\\w\\d]*"
        },
        "attribution": {
            "type": "string"
        },
        "formatter": {
            "type": "string"
        },
        "legend": {
            "type": "string"
        },
        "scheme": {
            "type": "string"
        },
        "tiles": {
            "type": "array",
            "required": true,
            "items": {
                "type": "string"
            }
        },
        "grids": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "minzoom": {
            "minimum": 0,
            "maximum": 22,
            "type": "integer"
        },
        "maxzoom": {
            "minimum": 0,
            "maximum": 22,
            "type": "integer"
        },
        "bounds": {
            "type": "array",
            "items": {
                "type": "number"
            }
        },
        "center": {
            "type": "array",
            "items": {
                "type": "number"
            }
        }
    }
}
